def f(x):
    return 3 * x - 12


def pole(a, b, n):
    dx = (b - a) / n
    s = 0
    for i in range(n):
        s += f(a + dx / 2 + i * dx) * dx
    return s


print(pole(1, 4, 10))

x = np.linspace(0, 10, 100)

plt.plot(x, f(x), color='crimson')

plt.show()

def bisekcja (a, b, numToSearch): # a = left   b = right
    middle = (a + b) / 2

    while f(middle) != numToSearch:
        if f(middle) < numToSearch:
            a = middle
        else:
            b = middle
        middle = (a + b) / 2
        if a >= b:
            print ("Nie ma miejsc zerowych")
            return -1
    return middle

print(bisekcja(1, 10, 0))
